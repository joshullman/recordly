<p id="notice"><%= notice %></p>

<h1><%= @artist.name %></h1>
<h3>Albums:</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>

<tbody>
  <% @albums.each do |album| %>
    <tr>
      <td><%= link_to album.title, user_album_path(current_user, album) %></td>
      <td><%= link_to 'Edit', edit_user_album_path(current_user, album, artist: @artist) %></td>
      <td><%= link_to 'Destroy', user_album_path(current_user, album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= render partial: "layouts/favorite", locals: {user: current_user, media: album} %></td>
    </tr>
  <% end %>
</tbody>

</table>
<br>
<%= link_to 'New Album', new_user_album_path(current_user, artist: @artist) %>

