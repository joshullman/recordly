<% if media.favorites.where(user_id: user).empty? %>
	<%= button_to "Add to Favorites", favorites_path(media_id: media.id, media_type: media.class.name), method: :create %>
<% else %>
	<%= button_to "Remove from Favorites", favorite_path(media.favorites.where(user_id: user).first), method: :delete %>
<% end %>