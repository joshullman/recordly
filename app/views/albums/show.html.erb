<p id="notice"><%= notice %></p>

<h1><%= @album.title %></h1>
<h3>by: <%= link_to @album.artist.name, user_artist_path(current_user, @album.artist) %></h3>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, user_song_path(current_user, song) %></td>
        <td><%= link_to 'Edit', edit_user_song_path(current_user, song) %></td>
        <td><%= link_to 'Destroy', user_song_path(current_user, song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br> 
<%= link_to 'New Song', new_user_song_path(current_user, album: @album) %>
